<form asp-action="Entrada" method="post">
    <div class="form-group">
        <label asp-for="Placa"></label>
        <input asp-for="Placa" class="form-control" />
        <span asp-validation-for="Placa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Modelo" class="form-label">Modelo</label>
        <select asp-for="Modelo" asp-items="ViewBag.Modelos" class="form-select">
            <option value="">-- selecione o modelo --</option>
        </select>
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tarifa Inicial</label>
        <input class="form-control" value="@ViewBag.TarifaInicial" readonly />
    </div>

    <div class="form-group">
        <label>Tarifa por Hora</label>
        <input class="form-control" value="@ViewBag.TarifaHora" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Registrar Entrada</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

