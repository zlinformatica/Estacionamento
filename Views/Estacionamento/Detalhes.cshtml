@model EstacionamentoMvc.Models.MovimentoEstacionamento

@{
    ViewData["Title"] = "Detalhe do Veículo";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">
        <i class="bi bi-car-front-fill text-primary"></i> Detalhe do Veículo
    </h2>

    <div class="card shadow-lg p-4">
        <dl class="row">
            <dt class="col-sm-3">Placa</dt>
            <dd class="col-sm-9">@Model.Veiculo</dd>

            <dt class="col-sm-3">Preço Inicial</dt>
            <dd class="col-sm-9">R$ @Model.PrecoInicial.ToString("N2")</dd>

            <dt class="col-sm-3">Hora/Fração</dt>
            <dd class="col-sm-9">R$ @Model.PrecoPorHora.ToString("N2")</dd>

            <dt class="col-sm-3">Entrada</dt>
            <dd class="col-sm-9">@Model.DataEntrada.ToString("dd/MM/yyyy HH:mm:ss")</dd>

            <dt class="col-sm-3">Saída</dt>
            <dd class="col-sm-9">
                @(Model.DataSaida.HasValue ? Model.DataSaida.Value.ToString("dd/MM/yyyy HH:mm:ss") : "Ainda estacionado")
            </dd>

            <dt class="col-sm-3">Tempo de Permanência</dt>
            <dd class="col-sm-9">
                @{
                    var saida = Model.DataSaida ?? DateTime.Now;
                    var permanencia = saida - Model.DataEntrada;
                    var horas = (int)permanencia.TotalHours;
                    var minutos = permanencia.Minutes;
                    @($"{horas}h {minutos}min")
                }
                @if (Model.ValorPago > 0)
                    {
                        <dt class="col-sm-3">Valor Pago</dt>
                        <dd class="col-sm-9 text-success fw-bold">R$ @Model.ValorPago.ToString("N2")</dd>
                    }
            </dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div>
